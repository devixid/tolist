#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo 'RUNNING GIT HOOKS'

echo 'Running linter....'

# Check ESLint Standards
yarn lint:fix ||
(
    echo '⛔️ There is an ESLINT ERROR on your code, please fix it and do commit again ⛔️';
    false;
)

echo '🎉 No error found: committing this now.... ✨🚀🏄‍♂️🍻'

npx lint-staged